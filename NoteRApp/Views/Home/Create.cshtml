@{
    ViewData["Title"] = "Creating";
}
@model User

<div>
    @using (Html.BeginForm("Create", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <label>Name</label><br />
            @Html.TextBox("Name", "", htmlAttributes: new { @class = "form-control", placeholder = "Input your name" })
            @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Age</label><br />
            @Html.TextBox("Age", "", new { type = "number", @class = "form-control", placeholder = "Input your age" })
            @Html.ValidationMessage("Age", "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Gender</label><br />
            @Html.DropDownList("Gender", Html.GetEnumSelectList<PersonGender>(), new { @class = "form-control" })
        </div>
        <div class="form-group">
            <div class="form-check">
                @Html.CheckBox("IsAdmin", new { @class = "form-check-input" })
                <label class="form-check-label" for="defaultCheck1">
                    As administrator
                </label>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Создать" />
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
